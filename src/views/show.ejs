<%- include('partials/header') -%>
<%- include('partials/nav') -%>  

  <main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>News</h2>

          <ol>
            <li><a href="/">Home</a></li>
            <li><a href="/news">News</a></li>
            <li><%= article.title %></li>
          </ol>
        </div>

      </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Single Section ======= -->
    <section id="blog" class="blog">
      <div class="container" data-aos="fade-up">

        <div class="row">

          <div class="col-lg-8 entries">

            <article class="entry entry-single">

              <div class="entry-img">
                <img src="assets/img/blog/blog-1.jpg" alt="" class="img-fluid">
              </div>

              <h2 class="entry-title">
                <a href="/news/<%= article.slug %>"><%= article.title %></a>
              </h2>

              <div class="entry-meta">
                <ul>
                  <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="/news/<%= article.slug %>">Admin</a></li>
                  <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href="/news/<%= article.slug %>"><time datetime="2021-04-04"><%= article.createdAt.toLocaleDateString('de-DE') %></time></a></li>
                  <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="/news/<%= article.slug %>">0 Kommentare</a></li>
                </ul>
              </div>

              <div class="entry-content">
                <%- article.sanitizedHtml %>
              </div>

              <div class="entry-footer">
                <i class="bi bi-folder"></i>
                <ul class="cats">
                  <li><a href="#">News</a></li>
                </ul>

                <i class="bi bi-tags"></i>
                <ul class="tags">
                  <li><a href="#">Neuheit</a></li>
                  <li><a href="#">Design</a></li>
                  <li><a href="#">Name</a></li>
                </ul>
              </div>

            </article><!-- End blog entry -->

            <div class="blog-comments">

              <h4 class="comments-count">0 Kommentare</h4>

 

              <div class="reply-form">
                <h4>Zurzeit sind keine Kommentare möglich</h4>
                <p>Wir werden dieses Feature demnächst freigeben</p>
